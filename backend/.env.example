# Heimdall Backend - Production Configuration
# Copy to .env and adjust values

# Domain (used by Traefik for routing)
DOMAIN=example.com

# PostgreSQL (password auto-generated during install)
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# JWT Secret (auto-generated during install)
SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET

# CORS Origins (JSON array)
CORS_ORIGINS=["https://heimdall.lab.example.com"]

# Anthropic API Key (optional, for LLM features)
ANTHROPIC_API_KEY=

# Timezone
TZ=Europe/Berlin
